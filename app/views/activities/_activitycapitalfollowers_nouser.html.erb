<% if activity.capital.amount > 0 %>
<img src="/images/icons/coins.png" height="16" width="16" border="0" class="icon">
<%= t('activity.capital.followers.earned.nouser', :user_name => link_to(activity.user.login, activity.user), :count => activity.capital.amount.abs, :currency_short_name => current_government.currency_short_name, :other_user_name => link_to(activity.other_user.name, activity.other_user))%>
<% else %>
<img src="/images/icons/coins_delete.png" height="16" width="16" border="0" class="icon">
<%= t('activity.capital.followers.lost.nouser', :user_name => link_to(activity.user.login, activity.user), :count => activity.capital.amount.abs, :currency_short_name => current_government.currency_short_name, :other_user_name => link_to(activity.other_user.name, activity.other_user))%>
<% end %>
