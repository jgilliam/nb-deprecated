<% if params[:q] %>
	<p><%= t('priorities.new.suggest') %>
<% end %>
<table cellpadding="0" cellspacing="0">
<% form_for(Priority.new) do |f| %>
<% if @tag_names %>
	<%= hidden_field_tag :tag_names, @tag_names %>
<% end %>
<tr>
<td valign="middle">
		<%= f.text_field :name, :size => 40, :maxlength => 60, :autocomplete =>"off" %>	
	</td>
<td valign="middle" style="padding-left: 2px;">
	<%= f.submit t('priorities.new.submit'), :class => "suggest_button" %>
</td>
</tr>
</table>
<% end %>